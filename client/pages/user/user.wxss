/* 背景颜色 */
page {
  background: #f9f9f9;
}
.bg{
  position: absolute;
  top: 0;
  width: 100%;
  height: 144rpx;
  z-index: -1;
}
/* 用户卡片 */
.user-card{
  margin: 32rpx 52rpx 0;
  padding: 42rpx;
  background: #fff;
  border-radius: 13rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0,0,0,0.02);
}
.user-card__info{
  font-size: 32rpx;
  line-height: 40rpx;
  font-weight: bolder;
  padding-bottom: 32rpx;
  margin-bottom:32rpx;
  border-bottom: 4rpx solid #efefef;
}
.user-card__info__img{
  margin-right: 20rpx;
  vertical-align: middle;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f5e069;
}
.user-card__opt{
  position: relative;
  padding-bottom: 32rpx;
  margin-bottom: 32rpx;
  border-bottom: 4rpx solid #efefef;
  font-size:28rpx;
  line-height: 42rpx;
  color:rgb(48, 44, 44);
}
.user-card__opt:last-child{
  padding-bottom: 0;
  margin-bottom: 0;
  border-bottom: none;
}
.img--more{
  position: absolute;
  top:11rpx;
  right:10rpx;
  width: 12rpx;
  height: 19rpx;
  line-height: 39rpx;
  vertical-align: middle;
}