/* 背景颜色 */
page {
  background: #f9f9f9;
}
.bg{
  position: absolute;
  top: 0;
  width: 100%;
  height: 144rpx;
  z-index: -1;
}
/* 焦点图 */
.header-img{
  position: relative;
  margin: 32rpx 52rpx 0;
  height: 326rpx;
  background: #fff;
  border-radius: 13rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0,0,0,0.02);
}
.header-img__title{
  position: absolute;
  top:44rpx;
  left:41rpx;
  align-items: center;
  display: flex;
}
.header-img__title__line{
  width: 24rpx;
  height: 39rpx;
}
.header-img__title__text{
  font-size: 29rpx;
  line-height: 39rpx;
  margin: 0 10rpx;
}
.header-img__product-img{
  position: absolute;
  right: 30rpx;
  top: 15rpx;
  width: 270rpx;
}
.header-img__discount-img{
  position: absolute;
  left:41rpx;
  bottom: 0;
  width: 250rpx;
}
/* 分隔栏 */
.split{
  margin: 44rpx auto;
  width: 190rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.split__line{
  width: 24rpx;
  height: 39rpx;
}
.split__text{
  font-size: 29rpx;
  font-weight: bolder;
  line-height: 39rpx;
}
/*  商品栏 */
.product{
  display: flex;
  flex-flow: row wrap;
  margin: 0  52rpx;
  justify-content: space-between;
}
.product__item{
  width: 310rpx;
  background: #fff;
  border-radius: 13rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0,0,0,0.02);
  margin-bottom: 30rpx;
}
.product__item__img{
  width: 260rpx;
  height: 260rpx;
  margin-left:20rpx;
}
.product__item__name,.product__item__opt{
  font-size: 29rpx;
  line-height: 39rpx;
  margin-left:20rpx;
}
.product__item__opt{
  height: 39rpx;
  position: relative;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.product__item__opt__money,.product__item__opt__join{
  font-size: 24rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: #F5E069;
  border-radius: 50%;
}
.product__item__opt__money{
 position: absolute;
 bottom: 5rpx;
}
.product__item__opt__join{
  position: absolute;
  right: 20rpx;
  bottom: 5rpx;
}
.product__item__opt__amount{
  position: absolute;
  left: 44rpx;
}
